<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_professor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gustavosg.tbcdrones.Professor">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnAlunosCadastrados"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@color/colorPrimary"
                android:text="@string/alunoscadastrados"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnNotasAlunos"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnAlunosCadastrados"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="56dp"
                android:background="@color/colorPrimary"
                android:text="@string/notas"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnAtualizarAluno"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnNotasAlunos"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="56dp"
                android:background="@color/colorPrimary"
                android:text="@string/atualizarusuario"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnDeletarAluno"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btnAtualizarAluno"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="56dp"
                android:background="@color/colorPrimary"
                android:text="@string/deletaraluno"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
